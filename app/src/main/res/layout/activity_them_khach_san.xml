<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm Khách Sạn"
            android:textSize="24sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@color/Background"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

<!--        private String tenKhachSan;-->
<!--        private String diaChi;-->
<!--        private String soDienThoai;-->
<!--        private String moTa;-->
<!--        private String hinhAnh;-->
<!--        private String giaTien1h;-->
<!--        private String giaTien1ngay;-->
<!--        private String giaTien1dem;-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTenKhachSan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên Khách Sạn">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTenKhachSan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--        private String tenTour;-->
        <!--        private String phuongTien;-->
        <!--        private String khachSan;-->
        <!--        private int donGia;-->
        <!--        private String ngayKhoiHanh;-->
        <!--        private String ngayketThuc;-->
        <!--        private String moTa;-->
        <!--        private String tinhTrang;-->
        <!--        private String khuVuc;-->
        <!--        private String noiKhoiHanh;-->
        <!--        private String soNgay;-->
        <!--        private String image;-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutDiaChi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa Chỉ  ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextDiaChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số Điện thoại">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextSoDienThoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutGiaTien1h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá tiền 1h">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextGiaTien1h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutGiaTien1ngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá tiền 1ngày">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextGiaTien1ngay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutGiaTien1dem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá tiền 1 đêm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextGiaTien1dem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextMoTa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTinhTrang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tình Trạng">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextTinhTrang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hình Ảnh"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonChoose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn Ảnh"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/Button"
            android:textColor="#ffffff"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Button"
            android:text="Submit"
            android:textColor="#ffffff"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            android:background="@color/Background"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="#ffffff"
            android:background="#FF0000"
            android:visibility="gone"
            />
    </LinearLayout>
</ScrollView>
